@page
@model Transportation.Web.Pages.DashBoard.Contracts.CreateAnnounceModel
@{
    ViewData["Title"] = "اعلام بار جدید";
}

@if(ViewData["IsSuccess"] != null)
{
            <div class="alert alert-success col-md-8">
                <p class="help-block">ثبت اعلام بار شما با موفقیت انجام شد</p>
            </div>

            <script>
                var delay = 3000;
                    setTimeout(function () { window.location = "https://localhost:44341/DashBoard"; }, delay);
            </script>
}

<div class="col-md-8 right">
    <form asp-page="CreateAnnounce" method="post">
    <input type="hidden" asp-for="Announce.ContractorId" value="@ViewData["ContractorId"]" class="form-control" />
    <div class="form-group">
        <label asp-for="Announce.CargoType"></label>
        <input asp-for="Announce.CargoType" type="text" class="form-control" placeholder="نوع بار">
        <span asp-validation-for="Announce.CargoType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.CargoWeight"></label>
        <input asp-for="Announce.CargoWeight" type="text" class="form-control" placeholder="تناژ بار">
        <span asp-validation-for="Announce.CargoWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.Beginning"></label>
        <input asp-for="Announce.Beginning" type="text" class="form-control" placeholder="مبدا">
        <span asp-validation-for="Announce.Beginning" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.Destination"></label>
        <input asp-for="Announce.Destination" type="text" class="form-control" placeholder="مقصد">
        <span asp-validation-for="Announce.Destination" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.PackageType"></label>
        <input asp-for="Announce.PackageType" type="text" class="form-control" placeholder="نوع بسته بندی">
        <span asp-validation-for="Announce.PackageType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.DriverFee"></label>
        <input asp-for="Announce.DriverFee" type="text" class="form-control" placeholder="مبلغ پیشنهادی">
        <span asp-validation-for="Announce.DriverFee" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.TruckTypes" class="form-label"></label>
        <select id="selectTrucks" class="selectpicker form-control" multiple data-live-search="true" asp-for="Announce.TruckTypes" asp-items="@ViewData["Types"] as SelectList"></select>
        <span asp-validation-for="Announce.TruckTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Announce.Description"></label>
        <textarea asp-for="Announce.Description" class="form-control"></textarea>
        <span asp-validation-for="Announce.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="button-33" style="margin-top:20px; transform: scale(0.74);text-align: center;">ثبت اعلام بار</button>
</form>
</div>





@section Head
    {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
}

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        $(function () {
            CKEDITOR.replace('Announce_Description', {
            customConfig: '/js/Config.js'
        });
        });
        ('#selectTrucks').selectpicker();
    </script>
}