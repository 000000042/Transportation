@model IEnumerable<Transportation.Core.DTOs.AdminDTO.ShowUsersViewModel>

<table class="table table-striped table-bordered table-hover dataTable no-footer">
    <thead>
        <tr>
            <th>نام کاربری</th>
            <th>ایمیل</th>
            <th>تاریخ ساخت</th>
            <th>نوع کاربر</th>
            <th>دستورات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.RegisterDate.PersianDateTime()</td>
                <td>
                    @if (user.UserType == UserTypes.Driver.ToString())
                    {
                        <p>راننده</p>
                    }
                    else
                    {
                        <p>متصدی</p>
                    }
                </td>
                <td>
                    @if (user.UserType == UserTypes.Driver.ToString())
                    {
                        <a class="btn btn-warning" href="/Admin/Users/Drivers/ApproveUser/@user.UserId">
                            نمایش بیشتر
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-warning" href="/Admin/Users/Contractors/ApproveUser/@user.UserId">
                            نمایش بیشتر
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>