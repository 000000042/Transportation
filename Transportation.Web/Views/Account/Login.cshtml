@model Transportation.Core.DTOs.AccountDTO.UserLoginViewModel

@{
    ViewData["Title"] = "ورود";
}

<hr />

<section class="page-section about-heading">
        <div class="container">
            <img class="img-fluid bg-light border rounded-pill border-0 shadow-lg rounded about-heading-img mb-3 mb-lg-0" src="/assets/img/EasyLayer.ir-IR-Flag-3D-Free-scaled.jpg?h=3ecf91bbefd3ab7314af2bb2d16721c5">
            <div class="about-heading-content">
                    @if (ViewBag.IsSuccess != null)
                        {
                            <div class="alert alert-success">
                                <p class="help-block">ورود شما با موفقیت انجام شد.</p>
                            </div>

        
                            <script>
                                var delay = 3000;
                                    setTimeout(function () { window.location = "https://localhost:44341/DashBoard"; }, delay);
                            </script>
                        }
                <form method="post">
                <div class="row">
                    <div class="col-lg-10 col-xl-9 mx-auto">
                        <h2 class="section-heading mb-4"></h2>
                        <div class="bg-faded rounded p-5">
                            <span class="section-heading-lower" style="text-align: center;font-family: 'B Nazanin';font-size: 33px;height: 65.5938px;font-weight: bold;font-style: italic;">ورود به پنل کاربری</span>
                            <div class="form-group">
                                <input id="codemeli" class="button-42 form-control" asp-for="PhoneNumber" rows="1" placeholder="Phone number | شماره تماس" style="text-align: center;font-family: 'B Nazanin';font-size: 26px;">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="form-group">
                                <input type="password" class="button-42 form-control" asp-for="Password" placeholder="Password | گذرواژه" style="text-align: center;font-family: 'B Nazanin';font-size: 26px;">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group form-check">
                               <label class="form-check-label">
                                    <label asp-for="RememberMe" class="control-label">به خاطر بسپار</label>
                                    <input class="form-check-input" asp-for="RememberMe" />
                               </label>
                            </div>
                            <a href="#" style="text-align: right;font-family: 'B Nazanin';color: rgb(0,0,0);">گذرواژه خودرا فراموش کرده ام&nbsp;</a>
                        </div>
                        <button class="btn btn-primary d-block w-100" asp-action="Login" asp-route-ReturnUrl="@ViewBag.ReturnUrl" type="submit" style="font-family: 'B Nazanin';font-size: 20px;font-weight: bold;">ورود به پنل کاربری</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
